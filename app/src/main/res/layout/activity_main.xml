<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.epfl.sweng.project.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/task_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:theme="@style/ActionBar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.98"
        android:orientation="horizontal"
        android:background="@drawable/main_activity_image">

        <Spinner
            android:id="@+id/vitality_user"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:gravity="end"
            android:spinnerMode="dropdown"
            android:background="@drawable/vitality"
            android:dropDownVerticalOffset="100dp"
            android:dropDownWidth="200dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:id="@+id/location_user"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:gravity="end"
            android:spinnerMode="dropdown"
            android:background="@drawable/location"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:dropDownVerticalOffset="100dp"
            android:dropDownWidth="200dp"
            android:layout_alignBottom="@+id/vitality_user"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/time_user"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:spinnerMode="dropdown"
            android:background="@drawable/time"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:dropDownVerticalOffset="100dp"
            android:dropDownWidth="200dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/tasks_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@color/white">

        <!--MarginRight to support older versions than API 17-->
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_task_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:onClick="openNewTaskActivity"
            android:src="@drawable/ic_add_white_48dp"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="normal" />
    </FrameLayout>

</LinearLayout>
