        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/list_remaining_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:ellipsize="end"
                android:paddingBottom="5dp"
                android:textSize="30sp"
                android:layout_weight="0.78" />

            <ImageView
                android:id="@+id/list_energy_low"
                android:layout_width="28dp"
                android:layout_height="29dp"
                android:src="@drawable/vitality"
                android:tint="@color/yellow" />

            <ImageView
                android:id="@+id/list_energy_normal"
                android:layout_width="28dp"
                android:layout_height="29dp"
                android:src="@drawable/vitality"
                android:tint="@color/yellow" />

            <ImageView
                android:id="@+id/list_energy_high"
                android:layout_width="28dp"
                android:layout_height="29dp"
                android:src="@drawable/vitality"
                android:tint="@color/yellow" />

            <View
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45" />


        </LinearLayout>


    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="97dp"
        android:id="@+id/checkBox"
        android:checked="false"
        android:contentDescription="@string/description_checkbox" />

    </LinearLayout>