<?xml version="1.0" encoding="utf-8"?>

<!-- TODO test the design on different devices -->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

    <TextView
        android:id="@+id/list_entry_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/task_title_size"
        android:paddingTop="5dp"
        android:paddingBottom="@dimen/padding_between_tasks"
        android:textStyle="normal"/>
    <!--
        <TextView
            android:id="@+id/list_entry_description"
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/padding_between_tasks"
            android:textColor="@color/black"
            android:textSize="@dimen/task_description_size" /> -->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/list_remaining_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:ellipsize="end"
                android:contentDescription="@string/description_remaining_days"
                android:paddingBottom="3dp"
                android:textSize="@dimen/task_remaining_days_size"
                android:layout_weight="0.78" />

            <ImageView
                android:id="@+id/list_energy_low"
                android:layout_width="28dp"
                android:layout_height="29dp"
                android:src="@drawable/vitality"
                android:contentDescription="@string/description_energy"
                android:tint="@color/yellow" />

            <ImageView
                android:id="@+id/list_energy_normal"
                android:layout_width="28dp"
                android:layout_height="29dp"
                android:contentDescription="@string/description_energy"
                android:src="@drawable/vitality"
                android:tint="@color/yellow" />

            <ImageView
                android:id="@+id/list_energy_high"
                android:layout_width="28dp"
                android:layout_height="29dp"
                android:contentDescription="@string/description_energy"
                android:src="@drawable/vitality"
                android:tint="@color/yellow" />

            <View
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/list_colored_indicator"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="#33ff4f" />

    </LinearLayout>