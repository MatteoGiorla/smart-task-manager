<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/task_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:theme="@style/ActionBar">

        <ImageButton
            android:src="@drawable/ic_done_white_36dp"
            android:contentDescription="@string/done_editing_task_description"
            android:id="@+id/edit_done_button_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_gravity="end"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            tools:ignore="RtlSymmetry" />

    </android.support.v7.widget.Toolbar>

    <!-- Trick to simulate the toolbar shadow for android pre Lollipop version -->
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/task_toolbar"
        android:background="@drawable/toolbar_shadow" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="80dp"
        android:weightSum="1">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/title_task_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/title_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_title"
                android:maxLength="@string/max_length_title"
                android:inputType="textPersonName|textCapSentences"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:text="DUE DATE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" />

        <Button
            android:text="DATE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pick_date"
            android:onClick="showDatePickerDialog" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.17" />

        <TextView
            android:text="DURATION"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />

        <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="11"
            android:progress="3"
            android:id="@+id/durationSeekBar"
            android:layout_weight="0.07" />

        <TextView
            android:text="LOCATION"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/locationSpinner"
            android:layout_weight="0.33" />

        <TextView
            android:text="ENERGY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/energySpinner"
            android:layout_weight="0.11" />

        <TextView
            android:text="DURATION OF A FRACTION"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" />

        <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:max="5"
            android:progress="3"
            android:id="@+id/fractionsSeekBar" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/description_task_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/description_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_description"
                android:inputType="textMultiLine|textAutoCorrect|textCapSentences"
                android:maxLines="4" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
</RelativeLayout>
