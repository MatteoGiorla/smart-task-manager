<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/task_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:theme="@style/ActionBar">

        <ImageButton
            android:src="@drawable/ic_done_white_36dp"
            android:contentDescription="@string/done_task_description"
            android:id="@+id/edit_done_button_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@null"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            tools:ignore="RtlSymmetry" />

    </android.support.v7.widget.Toolbar>

    <!-- Trick to simulate the toolbar shadow for android pre Lollipop version -->
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/task_toolbar"
        android:background="@drawable/toolbar_shadow" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="80dp"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:text="@string/titleTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:id="@+id/titleTitleTextView"
                android:textColor="@color/black"
                android:layout_weight="1.14" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/title_task_layout"
                android:layout_width="265dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/title_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_title"
                    android:maxLength="@string/max_length_title"
                    android:inputType="textPersonName|textCapSentences" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:text="@string/dueDateTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:id="@+id/dueDateTitleTextView"
                android:textColor="@color/black"
                android:layout_weight="1.14" />

            <Button
                android:text="@string/enter_due_date_hint"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:id="@+id/pick_date"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:onClick="showDatePickerDialog"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:text="@string/durationTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:id="@+id/durationTitleTextView"
                android:textColor="@color/black"
                android:layout_weight="1.14" />

            <Spinner
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:id="@+id/durationSpinner"
                android:gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:spinnerMode="dialog"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:text="@string/locationTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:id="@+id/locationTitleTextView"
                android:textColor="@color/black"
                android:layout_weight="1.14" />

            <Spinner
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:id="@+id/locationSpinner"
                android:gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:spinnerMode="dialog"
                android:entries="@array/location_array"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:text="@string/energyTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:id="@+id/energyTitleTextView"
                android:textColor="@color/black"
                android:layout_weight="1.14" />

            <Spinner
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:id="@+id/energySpinner"
                android:gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:spinnerMode="dialog"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:text="@string/descriptionTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:id="@+id/descriptionTitleTextView"
                android:textColor="@color/black"
                android:layout_weight="1.14" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/description_task_layout"
                android:layout_width="265dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/description_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_description"
                    android:inputType="textMultiLine|textAutoCorrect|textCapSentences"
                    android:maxLength="@string/max_length_description"
                    android:maxLines="10" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
