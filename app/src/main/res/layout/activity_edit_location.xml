<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/locationToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:theme="@style/ActionBar">

        <ImageButton
            android:src="@drawable/ic_done_white_36dp"
            android:contentDescription="@string/done_location_description"
            android:id="@+id/location_done_button_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@null"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            tools:ignore="RtlSymmetry" />

    </android.support.v7.widget.Toolbar>

    <TextView
        android:text="NAME"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locationNameTextView" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:id="@+id/location_name_layout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter name"
            android:id="@+id/locationName"
            android:maxLength="@string/max_length_title"/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:text="MAP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addressTitleTextView"
        android:textSize="14sp"
        android:textColor="@color/black" />

    <Button
        android:text="Enter address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choose_location" />

    <TextView
        android:text="Choosing the address corresponding to this location allows the app to automatically sort your tasks according to your current location using your GPS coordinates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chooseLocationExplanation"
        android:textColor="@color/black" />

</LinearLayout>